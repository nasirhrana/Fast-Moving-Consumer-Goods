@using System.Web.UI.WebControls
@model FMCGWebApp.ViewModels.LoginInfo

@{
    ViewBag.Title = "AssistantLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Office Assistant Login</h2>


<div class="log-w3">
    <div class="w3layouts-main">
        <h2>Office Assistant Login</h2>
        <form action="#" method="post">
            <label id="ShowEmail" style="font: initial; color: black"></label>
            <input type="email" class="ggg" id="Email" name="Email" placeholder="Enter Your Email" required="">
            <label id="ShowPassword" style="font: initial; color: black"></label>
            <input type="password" name="Password" id="Password" class="ggg" placeholder="Password" required="">
            <div class="clearfix"></div>
            <div class="form-group">
                <div>
                    <input type="submit" value="Login" class="btn btn-default" />
                </div>
            </div>
            <br />
            <h4 style="color:black; text-align: center">@ViewBag.Msg</h4>
        </form>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $("#Email").click(function () {
                $("#ShowEmail").text("Email");
            });
            $("#Password").click(function () {
                $("#ShowPassword").text("Password");
            });
        });

        $("#AdminLoginValidasion").validate({
            rules: {

                Email: "required",
                Password: "required",

            },
            messages: {

                Email: "Please  Enter Your Email!",
                Password: "Please  Enter your Password!",
            }
        });

    </script>
}
