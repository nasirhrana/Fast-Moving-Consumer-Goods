@model IEnumerable<FMCGWebApp.ViewModels.CompareOrderandStock>

@{
    ViewBag.Title = "CompareOrderandStock";
    Layout = "~/Views/Shared/_LayoutWhIncharge.cshtml";
}

<h2>Compare Order and Stock</h2>

<div id="page-wrapper">
    <table id="showAllOrdered" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Serial Number")
                </th>
                <th>
                    @Html.DisplayName("Category Name")
                </th>
                <th>
                    @Html.DisplayName("Item Name")
                </th>
                <th>
                    @Html.DisplayName("Need")
                </th>
                <th>
                    @Html.DisplayName("Stock")
                </th>
            </tr>
        </thead>

        <div>
            <h3 style="text-align: center;margin-top: 80px">Compare Order and Stock</h3>

        </div>

        <tbody>
            @foreach (var item in ViewBag.list)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @item.ItemName
                    </td>
                    <td>
                        @item.Need
                    </td>
                    <td>
                        @item.Stock
                    </td>

                </tr>
            }
        </tbody>

    </table>
</div>
<div style="margin-bottom: 350px"></div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $("#showAllOrdered").DataTable();
        });
    </script>
}
